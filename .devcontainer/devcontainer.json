{
	"name": "Den Codespaces Proof of Concept",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:1": {
			"version": "latest",
			"enableNonRootDocker": "false",
			"moby": "false"
		},
		"ghcr.io/jerrylopez/devcontainer-features/den:latest": {
			"version": "devcontainers"
		},
		"ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		}
	},

	// Use this environment variable if you need to bind mount your local source code into a new container.
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8025,
		80
	],
	"portsAttributes": {
		"80": {
			"label": "magento"
		},
		"8025": {
			"label": "mailhog"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "den bootstrap --db-dump ./magento-db.sql.gz",
	// "postStartCommand": "den env start"

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
